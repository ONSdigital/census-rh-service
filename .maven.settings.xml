<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <profiles>
        <profile>
            <id>artifactory</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <repositories>
                <repository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>central</id>
                    <name>External Virtual Repository</name>
                    <url>https://ons.jfrog.io/ons/external-repos</url>
                </repository>
                <repository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>releases</id>
                    <name>libs-release</name>
                    <url>https://ons.jfrog.io/ons/libs-releases-local</url>
                </repository>
                <repository>
                    <id>snapshots</id>
                    <url>https://ons.jfrog.io/ons/libs-snapshots-local/</url>
                </repository>
            </repositories>

            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <name>External Virtual Repository</name>
                    <url>https://ons.jfrog.io/ons/external-repos</url>
                </pluginRepository>
            </pluginRepositories>

        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>artifactory</activeProfile>
    </activeProfiles>

    <servers>
        <server>
            <username>integration-ci</username>
            <password>${env.JFROG_TOKEN}</password>
            <id>releases</id>
        </server>
        <server>
            <username>integration-ci</username>
            <password>${env.JFROG_TOKEN}</password>
            <id>snapshots</id>
        </server>
        <server>
            <username>integration-ci</username>
            <password>${env.JFROG_TOKEN}</password>
            <id>central</id>
        </server>
    </servers>
</settings>

